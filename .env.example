
# Configurazione per il profilo Chrome (raccomandato)
USE_CHROME_PROFILE=True
# Percorso del profilo Chrome - imposta secondo il tuo sistema operativo
# Windows
CHROME_USER_DATA_DIR=C:\Users\tuoutente\AppData\Local\Google\Chrome\User Data
# macOS
# CHROME_USER_DATA_DIR=/Users/tuoutente/Library/Application Support/Google/Chrome
# Linux
# CHROME_USER_DATA_DIR=/home/tuoutente/.config/google-chrome

# Credenziali (utilizzate solo se USE_CHROME_PROFILE=False)
# EMAIL=tua_email@esempio.com
# PASSWORD=tua_password

# Altre opzioni
HEADLESS=False
# DOWNLOAD_PATH=/percorso/personalizzato/downloads

# Debug
DEBUG=True
